

<h1>Events</h1>
<%= link_to "Calendar List", calendars_path, class: 'btn btn-secondary m-2' %>
<%= link_to "New event", new_event_path(params[:calendar_id]), class: 'btn btn-primary m-2' %>
<div id="events">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Summary</th>
        <th>Start Date</th>
        <th>Start Time</th>
        <th>End Date</th>
        <th>End Time</th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
      <% @events.items.each do |event| %>
      <tr>
        <td>
          <%= event.summary %> 
        </td>
        <td><%= event.start.date_time.strftime("%d-%m-%Y") %></td>
        <td><%= event.start.date_time.strftime("%H:%M") %></td>
        <td><%= event.end.date_time.strftime("%d-%m-%Y") %></td>
        <td><%= event.end.date_time.strftime("%H:%M") %></td>
        <%= @calendar_id %> 
        <td class='d-flex'>
          <%= link_to "Show", calendars_path, class: 'btn btn-outline-secondary m-2' %>
          <%= link_to "Update", calendar_event_edit_path(params[:calendar_id],event.id) , class: 'btn btn-outline-info m-2' %>
          <%= button_to "Delete", calendar_event_destroy_path(params[:calendar_id],event.id), class: 'btn btn-outline-danger m-2',method: :delete %>

        </td>
        </tr>
      <% end %>
          
    </tbody>
  
  </table>
  

</div>



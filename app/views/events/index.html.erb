

<h1>Events</h1>
<%= link_to "Calendar List", calendars_path, class: 'btn btn-secondary m-2' %>
<%= link_to "New event", new_event_path(params[:calendar_id]), class: 'btn btn-primary m-2' %>
<div id="events">
  <% @events.items.each do |event| %>
    <li>
      Summary : 
      <%= event.summary %> 
    </li>
    <li>Event ID : <%= event.id %></li>
    <li>Start time : <%= event.start.date_time %></li>
    <li>End time : <%= event.end.date_time %>    </li>
    <%= @calendar_id %> 
    <p class='d-flex'>
      <%= link_to "Show event", calendars_path, class: 'btn btn-secondary mx-2' %>
      <%= link_to "Update event", calendar_event_edit_path(params[:calendar_id],event.id) , class: 'btn btn-info mx-2' %>
      <%= button_to "Delete event", calendar_event_destroy_path(params[:calendar_id],event.id), class: 'btn btn-danger m-2',method: :delete %>

    </p><hr>
  <% end %>

</div>



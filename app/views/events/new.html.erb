<h1>New event</h1>

<%= form_with url: create_event_path(@calendar_id), method: :post, local: true do |form| %> 

  <div>
    <%= form.label :summary, style: "display: block" %>
    <%= form.text_field :summary %>
  </div>
  
  <div class="form-group">
   <%= form.label :start, "Date:" %>
   <%= form.datetime_select :start %>  
 </div>

 <div class="form-group">
   <%= form.label :end, "Date:" %>
   <%= form.datetime_select :end %> 
 </div>

  <div>
    <%= form.hidden_field :calendar_id, value: @calendar_id %>
  </div>

  <div>
    <%= form.hidden_field :user_id, value:current_user.id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>





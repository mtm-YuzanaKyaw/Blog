<%= form_with model: [@post, @post.comments.build] do |form| %>
  <div>
    <%= form.label :comment, style: "display: block" ,class:"form-label" %>
    <%= form.text_area :comment, rows:5, class:"form-control" %>
  </div>

  <div>
    <%= form.text_field :post_id, id: :comment_post_id, 
    value:@post.id, type: :hidden %>
  </div>

  <div>
    <%= form.text_field :user_id , id: :comment_user_id, 
    value: current_user.id, type: :hidden %>
  </div>

  <div>
    <%= form.submit class:"btn btn-outline-primary m-2" %>
  </div>
<% end %>
